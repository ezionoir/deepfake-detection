{
    "description": "This config is used for training.",

    "batch-size": 8,

    "input-size": 224,

    "model": {
        "input-shape": {
            "batch-size": 8,
            "groups-per-video": 16,
            "frames-per-group": 2,
            "channels": 3,
            "height": 224,
            "width": 224
        },

        "submodules": {
            "spatiotemporal": {
                "input-shape": {
                    "batch-size": 128,
                    "frames-per-group": 2,
                    "channels": 3,
                    "height": 224,
                    "width": 224
                },
                "motion-diff": {
                    "features": [6, 6, 3]
                },
                "EfficientNet": {
                    "scale": "b0",
                    "num-classes": 1
                }
            },
    
            "spatial": {
                "input-shape": {
                    "batch-size": 256,
                    "channels": 3,
                    "height": 224,
                    "width": 224
                },
                "EfficientNet": {
                    "scale": "b0",
                    "num-classes": 1
                }
            }
        }
    },

    "loss-function": {
        "name": "BCE"
    },

    "optimizer": {
        "name": "Adam",
        "learning-rate": 0.001
    },

    "sampling": {
        "num_groups": 16,
        "group_size": 2
    },

    "decision-strategy": {
        "threshold": 0.8
    }
}